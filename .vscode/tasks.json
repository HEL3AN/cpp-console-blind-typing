{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-l:pdcurses.a",
                "-o",
                "${fileDirname}/output/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run_in_mingw64",
            "type": "shell",
            "command": "C:/msys64/mingw64.exe",
            "args": [
                "C:/C++/cpp-console-blind-typing/console-blind-typing/output/main.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": "C/C++: g++.exe build active file",
            "problemMatcher": []
        },
        {
            "label": "run_in_cmd",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/C",
                "start",
                "cmd.exe",
                "/K",
                "${fileDirname}/output/${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": "C/C++: g++.exe build active file",
            "problemMatcher": []
        }
    ]
}
